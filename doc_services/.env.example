# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=1.0.0
API_TITLE="Document Classification API"

# Model Configuration
MODEL_PATH=../doclayout-yolo/doclayout_yolo_docstructbench_imgsz1024.pt
CONFIDENCE_THRESHOLD=0.2
IMAGE_SIZE=1024
DEVICE=cpu  # cpu ou cuda

# LLM Configuration (opcional - deixe em branco para desabilitar)
LLM_PROVIDER=anthropic  # anthropic, openai, ou local
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# LLM Model Selection
ANTHROPIC_MODEL=claude-3-sonnet-20240229
OPENAI_MODEL=gpt-4-turbo-preview

# LLM Pricing (USD per 1000 tokens)
ANTHROPIC_INPUT_PRICE_PER_1K=0.003
ANTHROPIC_OUTPUT_PRICE_PER_1K=0.015
OPENAI_INPUT_PRICE_PER_1K=0.01
OPENAI_OUTPUT_PRICE_PER_1K=0.03

# LLM Behavior
LLM_MAX_TOKENS=1000
LLM_TEMPERATURE=0.0
LLM_TIMEOUT_SECONDS=30
LLM_MAX_RETRIES=3

# Cache Configuration
ENABLE_CACHE=true
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=500

# File Upload Limits
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,tiff,tif

# Processing Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=60
ENABLE_ASYNC_PROCESSING=true

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json ou text
LOG_FILE=logs/api.log
LOG_ROTATION=500 MB

# Monitoring & Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_NAMESPACE=doc_classification

# CORS
CORS_ORIGINS=*  # Em produção, especifique domínios permitidos
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Security
API_KEY_ENABLED=false
API_KEY=your-secret-api-key-here
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60

# Database (opcional - para armazenar histórico)
DATABASE_URL=postgresql://user:password@localhost:5432/doc_classification
ENABLE_DATABASE=false

# Development
DEBUG=false
RELOAD=false
WORKERS=4
